/* Example 4.3 - A program that computes the sum from 1 to a user-specified number. */

#include<stdio.h>

int main(){
  long sum = 0L;  /* Stores the sum of the integers */
  int count = 0;  /* The number of integers to be summed. */
  int i = 0; /* The loop counter */

  printf("\nPlease enter the number of integers you'd like summed:\n"); /* Read the number of integers to be summed */
  scanf(" %d", &count);

  /* Sum integers from 1 to count. */

  for(i = 1; i <= count; ++i)
    sum += i;

    printf("\nThe sum of the first %d numbers is %ld\n", count, sum);
  }
  
